<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:scrollbarSize="0dp"
    android:scrollbars="none">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/toplayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Good Morning"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="5mm"
                    android:layout_height="5mm"
                    android:layout_marginLeft="18mm"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_baseline_history_24" />

                <ImageView
                    android:layout_width="5mm"
                    android:layout_height="5mm"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_baseline_settings_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sec_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toplayout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cVonrepeat"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/onrepeat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="On Repeat"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/temenaril" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Temen Aril"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sec_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/brokenheart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="22dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Broken Heart"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/viralhits" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Viral Hits"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bot_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mid_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/lagiviral" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Lagi Viral"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#252525"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:src="@drawable/mysql" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="MySql"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_madeforyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bot_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_bold"
                android:text="Made For You"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/dailylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_madeforyou"
                android:layout_marginTop="-1dp"

                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbars="none"
                android:visibility="visible">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/dailymix1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Taylor Swift, The Weekend, Joji and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/mix2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 2"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Ariana Grande,
Boy Pablo and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/mix3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 3"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Justin Bieber, Olivia
Rodrigo and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:backgroundTint="@color/black"
                        app:contentPaddingRight="20dp">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/mix4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 4"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Fourtwnty, Hivi!
                        and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txt_bighits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dailylayout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_bold"
                android:text="Today's Biggest Hits"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:id="@+id/bighits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_bighits"
                android:layout_marginTop="-1dp"

                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbars="none"
                android:visibility="visible">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/dailymix1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Taylor Swift, The Weekend, Joji and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/dailymix1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Taylor Swift, The Weekend, Joji and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/black">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/dailymix1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Taylor Swift, The Weekend, Joji and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/black"
                        app:contentPaddingBottom="70dp"
                        app:contentPaddingRight="25dp">

                        <ImageView
                            android:layout_width="20mm"
                            android:layout_height="20mm"
                            android:src="@drawable/dailymix1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20mm"
                            android:fontFamily="@font/inter_bold"
                            android:text="Daily Mix 1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23mm"
                            android:fontFamily="@font/inter"
                            android:text="Taylor Swift, The Weekend, Joji and more"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#B7000000"
        app:itemIconTint="@color/white"
        app:itemTextColor="#B0FFFFFF"
        app:menu="@menu/bottom_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>




